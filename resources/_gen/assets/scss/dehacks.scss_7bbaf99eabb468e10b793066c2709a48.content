body,
html {
  height: 100%;
  margin: 0; }

body {
  display: flex;
  flex-direction: column; }

.content {
  flex: 1;
  /* This makes the content area take up remaining space */ }

.footer {
  position: absolute;
  bottom: 0;
  width: 100%; }

.container {
  background-color: unset;
  background: none;
  padding: 0;
  box-sizing: content-box; }
  .container:before {
    content: none; }
  .container__row {
    background-color: unset; }
